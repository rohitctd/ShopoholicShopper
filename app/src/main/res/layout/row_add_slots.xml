<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shopoholic.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="false"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/set_price_time_duration"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp" />

        <Switch
            android:id="@+id/st_all_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:switchPadding="@dimen/_10sdp"
            android:text="@string/all_day"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11sdp" />

    </RelativeLayout>


    <com.shopoholic.customviews.CustomTextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/round_corner_purple_stroke_transparent_bg"
        android:gravity="center"
        android:longClickable="false"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp"
        tools:text="12/08/2018 - 20/08/2018" />

    <com.shopoholic.customviews.CustomTextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/round_corner_purple_stroke_transparent_bg"
        android:gravity="center"
        android:longClickable="false"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp"
        tools:text="10:00 AM - 11:00 AM" />

    <com.shopoholic.customviews.CustomTextView
        android:id="@+id/tv_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/round_corner_purple_stroke_transparent_bg"
        android:gravity="center"
        android:longClickable="false"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp"
        tools:text="1 hr 30 min" />

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:visibility="visible"
        android:gravity="center">

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:longClickable="false"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            tools:text="@string/rupees" />

        <com.shopoholic.customviews.CustomEditText
            android:id="@+id/et_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorHintText"
            android:textSize="@dimen/_10ssp" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_currency_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:longClickable="false"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            tools:text="@string/rupees" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:visibility="visible"
        android:background="@color/colorHintText" />

    <com.shopoholic.customviews.CustomTextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_20sdp"
        android:longClickable="false"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="@string/remove"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>