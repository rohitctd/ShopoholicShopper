<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root_view"
    android:layout_width="@dimen/_50sdp"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingTop="@dimen/_5sdp"
    android:gravity="center"
    android:paddingBottom="@dimen/_2sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_category_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/round_corner_pink_bg"
        android:src="@drawable/ic_home_buddy_alll_selected"
        android:padding="@dimen/_2sdp"/>
    <com.shopoholic.customviews.CustomTextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_7ssp"
        android:layout_below="@+id/iv_category_image"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:minLines="1"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/colorMessageText"
        android:layout_marginTop="@dimen/_5ssp"
        app:fontName="@string/orkney_medium"
        android:text="@string/dummy_text"
        />
    <com.shopoholic.customviews.CustomTextView
        android:id="@+id/tv_percentage"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_8ssp"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/round_corner_pink_bg"
        android:layout_centerHorizontal="true"
        app:fontName="@string/orkney_bold"
        android:visibility="visible"
        android:textColor="@android:color/white"
        tools:text="10%"
        />
</RelativeLayout>