<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogImagePickerRootRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@android:color/black">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:clickable="false"
                app:fontName="@string/orkney_bold"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="@string/camera"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/colorSeparator"/>

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                app:fontName="@string/orkney_bold"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_8sdp"
                android:text="@string/gallery"/>

            <View
                android:id="@+id/view_remove_photo_separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/colorSeparator"/>

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_remove_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                app:fontName="@string/orkney_bold"
                android:text="@string/remove_photo"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textColor="@android:color/holo_blue_light"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                app:fontName="@string/orkney_bold"
                android:text="@string/cancel"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>