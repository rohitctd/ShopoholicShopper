<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_switch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="@drawable/round_corner_accent_bg">

    <ImageView
        android:id="@+id/iv_circle_bg"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/round_corner_accent_button"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_km"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/miles"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_9ssp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_miles"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/km"
            android:textColor="@color/colorTabUnselected"
            android:textSize="@dimen/_9ssp"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>
