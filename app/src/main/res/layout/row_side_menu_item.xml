<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/selected_menu_item_view_shadow"
    android:layout_width="match_parent"
    android:id="@+id/fl_menu_item_root"
    android:layout_height="wrap_content">

<com.shopoholic.customviews.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawablePadding="@dimen/_10sdp"
    android:drawableStart="@drawable/ic_home_buddy_location_map"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/_8sdp"
    android:paddingEnd="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    android:paddingTop="@dimen/_8sdp"
    android:textColor="@android:color/black"
    android:textSize="@dimen/_13ssp"
    app:fontName="@string/orkney_regular"
    tools:text="@string/dummy_text" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_unread"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@android:color/holo_red_dark"
        android:visibility="gone" />

</FrameLayout>