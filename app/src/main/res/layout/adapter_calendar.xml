<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_day_view"
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/toolbar_circle"
    android:gravity="center">


    <TextView
        android:id="@+id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorLightWhite"
        android:textSize="@dimen/_11ssp"
        tools:text="1" />

    <LinearLayout
        android:id="@+id/ll_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_day"
        android:layout_below="@+id/tv_day"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_event_1"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center"
            android:background="@drawable/event_date_background"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rl_event_4"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_2sdp"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_centerVertical="true"
                android:background="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>