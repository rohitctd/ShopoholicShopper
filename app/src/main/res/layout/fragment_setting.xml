<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_login"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/ll_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingStart="@dimen/_14sdp">


            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_weight="1"
                android:text="@string/notifications"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                app:fontName="@string/orkney_regular"
                tools:ignore="NestedWeights" />

            <FrameLayout
                android:id="@+id/rl_switch"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/round_corner_white_stroke_transparent_bg">

                <ImageView
                    android:id="@+id/iv_circle_bg"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="start"
                    android:src="@drawable/round_corner_white_bg"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_notification"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/change_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:id="@+id/view_change_password"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_manage_bank_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/manage_bank_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:id="@+id/view_manage_bank_details"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/change_language"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:id="@+id/view_change_language"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/invite_friends"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/help"
            android:textColor="@color/colorLightGrey"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_feedback_to_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/contact_us"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:id="@+id/view_feedback_to_admin"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_user_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/user_guide"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/about_us_and_faqs"
            android:textColor="@android:color/white"

            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_legal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:text="@string/legal"
            android:textColor="@color/colorLightGrey"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_terms_and_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/terms_and_conditions"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/privacy_policy"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/cancellation_policy"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_blocked_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_setting_arrow"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="@string/blocked_deals"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />

        <View
            android:id="@+id/view_blocked_deals"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <LinearLayout
            android:id="@+id/ll_local_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingStart="@dimen/_14sdp">


            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_local_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_weight="1"
                android:text="@string/local_information"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                app:fontName="@string/orkney_regular"
                tools:ignore="NestedWeights" />

            <FrameLayout
                android:id="@+id/rl_local_switch"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/round_corner_white_stroke_transparent_bg">

                <ImageView
                    android:id="@+id/iv_local_circle_bg"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="start"
                    android:src="@drawable/round_corner_white_bg"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_local_information"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorSeparator" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingStart="@dimen/_14sdp"
            android:text="@string/logout"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_regular" />
    </LinearLayout>
</ScrollView>