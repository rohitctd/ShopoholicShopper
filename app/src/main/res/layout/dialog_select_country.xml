<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/white"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp">

        <com.shopoholic.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/txt_select_country"
            android:textColor="@color/colorMessageText"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_bold" />

        <com.shopoholic.customviews.CustomTextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/_5sdp"
            android:text="@string/done"
            android:textColor="@color/colorDialogDone"
            android:textSize="@dimen/_15ssp"
            app:fontName="@string/orkney_bold" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rg_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_hong_kong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:button="@drawable/custom_country_radio_button"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/hong_kong"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="lollipop" />

            <RadioButton
                android:id="@+id/rb_india"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_country_radio_button"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/india"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="lollipop" />

            <RadioButton
                android:id="@+id/rb_macau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:button="@drawable/custom_country_radio_button"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/macau"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="lollipop" />

            <RadioButton
                android:id="@+id/rb_singapore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:button="@drawable/custom_country_radio_button"
                android:text="@string/singapore"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="lollipop" />

            <RadioButton
                android:id="@+id/rb_uae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:button="@drawable/custom_country_radio_button"
                android:paddingTop="@dimen/_10sdp"
                android:text="@string/uae"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp"
                tools:targetApi="lollipop" />

        </RadioGroup>
    </ScrollView>
</LinearLayout>