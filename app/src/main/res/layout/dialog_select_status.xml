<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@android:color/black"
    android:gravity="bottom"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorMessageText"
                android:textSize="@dimen/_12ssp"
                app:fontName="@string/orkney_medium"
                android:text="@string/active"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/colorSeparator"/>

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorMessageText"
                android:textSize="@dimen/_12ssp"
                app:fontName="@string/orkney_medium"
                android:text="@string/away"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/colorSeparator"/>

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_do_not_disturb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorMessageText"
                android:textSize="@dimen/_12ssp"
                app:fontName="@string/orkney_medium"
                android:text="@string/do_not_disturb"/>
            <View
                android:id="@+id/view_offline"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/colorSeparator"/>

            <com.shopoholic.customviews.CustomTextView
                android:id="@+id/tv_offline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorMessageText"
                android:textSize="@dimen/_12ssp"
                app:fontName="@string/orkney_medium"
                android:text="@string/offline"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>