<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/toolbar_gradient"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/crop__selectable_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_clear_grey_24dp"
            android:drawableStart="@drawable/ic_clear_grey_24dp"
            android:text="@string/crop__cancel"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:drawablePadding="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_done"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/crop__selectable_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_check_grey_24dp"
            android:drawableStart="@drawable/ic_check_grey_24dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="@string/crop__done" />
    </FrameLayout>

</LinearLayout>
